{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./",
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "src/test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
